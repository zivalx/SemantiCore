# ===== Database Configuration =====

# PostgreSQL (application state: projects, jobs, sources, primitives)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=semantic_mapper

# Neo4j (knowledge graph: ontology, instances, relationships)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ===== LLM Configuration =====

# Default LLM provider: "anthropic" or "openai"
LLM_PROVIDER=anthropic

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# ===== Backend Configuration =====

# File upload settings
UPLOAD_DIR=/app/storage/uploads
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost

# ===== Frontend Configuration =====

# API URL for frontend (used during build)
VITE_API_URL=http://localhost:8000/api
